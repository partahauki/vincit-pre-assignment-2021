{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "import/extensions": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": [
            "off", {"selector": "for-of"}
        ],
        "react/react-in-jsx-scope": "off",
        "max-len" : [ "error", 100]
    }
}
